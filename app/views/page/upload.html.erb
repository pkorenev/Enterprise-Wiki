<h1>Page#upload</h1>

<%= form_for @page, :url => @page.to_s, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :path %>
    <%= f.text_field :path, :readonly => true %>
  </p>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :file %>
    <%= file_field_tag :somefile %>
  </p>
  <p>
    <%= f.label :is_private %>
    <%= f.check_box :is_private %>
  </p>
  <p>
    <%= f.label :is_protected %>
    <%= f.check_box :is_protected %>
  </p>
  <p>
    <%= f.submit "Upload" %>
  </p>
<% end %>
