<h1>Page#edit</h1>

<%= form_for @page, :url => @page.to_s do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :path %>
    <%= f.text_field :path, :readonly => true %>
  </p>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %>
    <%= f.text_area :body, :size => "60x12" %>
  </p>
  <p>
    <%= f.label :editor %>
    <%= f.number_field :editor_id, :readonly => true %>
  </p>
  <p>
    <%= f.label :revision %>
    <%= f.number_field :revision, :readonly => true %>
  </p>
  <p>
    <%= f.submit "Save" %>
  </p>
<% end %>
