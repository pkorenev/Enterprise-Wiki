            variables GET    /variables(.:format)                             variables#index
                      POST   /variables(.:format)                             variables#create
         new_variable GET    /variables/new(.:format)                         variables#new
        edit_variable GET    /variables/:id/edit(.:format)                    variables#edit
             variable GET    /variables/:id(.:format)                         variables#show
                      PUT    /variables/:id(.:format)                         variables#update
                      DELETE /variables/:id(.:format)                         variables#destroy

this is the history view which lists all the revisions of a page.
#      page_revisions GET    /pages/:page_id/revisions(.:format)              revisions#index

when a page exists, edit_page will redirects here.
#                     POST   /pages/:page_id/revisions(.:format)              revisions#create
#   new_page_revision GET    /pages/:page_id/revisions/new(.:format)          revisions#new

used as permalink or just for viewing a specific revision.
#       page_revision GET    /pages/:page_id/revisions/:id(.:format)          revisions#show

when a page exists, edit_page will redirects here.
# edit_page_hyperlink GET    /pages/:page_id/hyperlink/edit(.:format)         hyperlinks#edit
#                     PUT    /pages/:page_id/hyperlink(.:format)              hyperlinks#update

this will redirect to the hyperlink (show page only displays the hyperlink).
#                     GET    /pages/:page_id/hyperlink(.:format)              hyperlinks#show

list all pages (may be used as a site map).
#               pages GET    /pages(.:format)                                 pages#index

show page
; for normal page, display the last revision
; for hyperlink, display the hyperlink and provide a link for it
; for file, connect with upload.acm-project.org (user downloads the file there, not here)
#                page GET    /pages/:id(.:format)                             pages#show

create new page (need to select type; will create a revision or a hyperlink if selected).
#                     POST   /pages(.:format)                                 pages#create
#            new_page GET    /pages/new(.:format)                             pages#new

edit owner/group/permission (root can edit path).
#           edit_page GET    /pages/:id/edit(.:format)                        pages#edit
#                     PUT    /pages/:id(.:format)                             pages#update

these actions are referenced in the index page of groups.
#                     POST   /groups/:group_id/memberships(.:format)          memberships#create
#                     DELETE /groups/:group_id/memberships/:id(.:format)      memberships#destroy

index page includes a grouped view of groups and a create-new-group form.
members of groups are shown in this view directly, including create/destroy forms.
#              groups GET    /groups(.:format)                                groups#index
                      POST   /groups(.:format)                                groups#create
           edit_group GET    /groups/:id/edit(.:format)                       groups#edit
                      PUT    /groups/:id(.:format)                            groups#update
                      DELETE /groups/:id(.:format)                            groups#destroy

               themes GET    /themes(.:format)                                themes#index
                      POST   /themes(.:format)                                themes#create
            new_theme GET    /themes/new(.:format)                            themes#new
           edit_theme GET    /themes/:id/edit(.:format)                       themes#edit
                theme GET    /themes/:id(.:format)                            themes#show
                      PUT    /themes/:id(.:format)                            themes#update
                      DELETE /themes/:id(.:format)                            themes#destroy

                 root        /                                                site#home
